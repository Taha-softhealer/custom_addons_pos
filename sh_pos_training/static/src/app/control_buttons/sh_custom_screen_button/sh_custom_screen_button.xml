<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="sh_pos_training.control_buttons" t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension">
        <xpath expr="//t[@t-if='props.showRemainingButtons']/div" position="inside">
           <button class=" btn btn-secondary btn-lg py-5" t-on-click="sh_open_custom_popup">
                    <span>Custom popup</span>
                </button>
           <button class=" btn btn-secondary btn-lg py-5" t-on-click="sh_open_custom_screen">
                    <span>Open Screen</span>
                </button>
        </xpath>
    </t>
</templates>