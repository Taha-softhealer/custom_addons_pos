<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">


  <t t-name="sh_pos_mrp_custom.MeasurementSelectionPopup">
        <Dialog title="props.title"  contentClass="'pb-5'" bodyClass="'d-flex flex-column gap-2 border-bottom'">
            <button t-foreach="props.list" t-as="item" t-key="item.id"
                    class="selection-item  123 d-flex align-items-center justify-content-between btn btn-lg btn-outline-secondary w-100 p-3 text-start"
                    t-att-class="{ 'selected active': item.isSelected }"
                    t-on-click="() => this.selectItem(item.id)">
                <div class="d-flex flex-column">
                    <span t-esc="item.label" />
                    <span t-esc="item.description" t-if="item.description" />
                </div>
                <i t-attf-class="{{ item.isSelected ? 'fa fa-check text-action' : 'oi oi-chevron-right' }}"/>
            </button>
             <t t-set-slot="footer">
                <button class="btn btn-secondary " t-on-click="cancel">Cancel</button>
                <button class="btn btn-primary " t-on-click="shCreate">Create</button>
            </t>
        </Dialog>
    </t>

