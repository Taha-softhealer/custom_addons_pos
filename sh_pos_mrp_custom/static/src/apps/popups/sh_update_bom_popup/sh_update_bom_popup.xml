<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="sh_pos_mrp_custom.shUpdateBomPopup">
        <Dialog title="props.product.display_name" footer="false" contentClass="'pb-5'" bodyClass="'d-flex flex-column gap-2 border-bottom'">
            <div class="popup popup-import product-configurator-popup sh_select_bom_popup">
                <main class="body modal-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th class="col-2" scope="col">Component</th>
                                <th class="col-2" scope="col">Final Component</th>
                                <th class="col-4" scope="col">Quantity</th>
                                <th class="col-4" scope="col">Product Unit of Measure</th>
                                <th class="col-2" scope="col">Delete</th>
                            </tr>
                        </thead>
                        <BomComponents bom_components="props.components" changes="changes" sh_require_fabric="props.sh_require_fabric" />
                    </table>
                    <div class="note_popup">
                        <h3 class="d-flex align-items-center mb-0">
                            <span class="modal-title note_title me-2">Note : </span>
                            <textarea name="sh_component_note" t-model="props.sh_component_note" class="form-control sh_component_note" id="sh_component_note" />
                        </h3>
                    </div>
                </main>
                <footer class="footer modal-footer">
                    <div class="button cancel btn btn-lg btn-primary" t-on-click="confirm">
                    Confirm
                    </div>

                </footer>
            </div>
        </Dialog>
    </t>

</templates>
