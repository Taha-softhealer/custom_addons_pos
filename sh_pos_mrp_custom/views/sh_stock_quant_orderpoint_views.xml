<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_warehouse_orderpoint_list_editable_inherit" model="ir.ui.view">
        <field name="name">stock.warehouse.orderpoint.view.list.inherit</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.view_warehouse_orderpoint_tree_editable"/>
        <field name="arch" type="xml">
            <list position="inside">
                <field name="sh_stock_quant_orderpoint_id" column_invisible="True"/>
            </list>
        </field>
    </record>

    <record id="sh_stock_quant_orderpoint_view_list" model="ir.ui.view">
        <field name="name">sh.stock.quant.orderpoint.view.list</field>
        <field name="model">sh.stock.quant.orderpoint</field>
        <field name="arch" type="xml">
            <list default_order="qty_forecast ASC" create="False" delete="False">
                <field name="company_id" column_invisible="True" />
                <field name="orderpoint_id" column_invisible="True"/>
                <field name="product_id" />
                <field name="location_id" groups="stock.group_stock_multi_locations" />
                <field name="qty_on_hand" />
                <field name="qty_forecast" />
                <field name="product_min_qty" optional="hide" />
            </list>
        </field>
    </record>

    <record id="sh_stock_quant_orderpoint_action" model="ir.actions.act_window">
        <field name="name">Low Stock</field>
        <field name="res_model">sh.stock.quant.orderpoint</field>
        <field name="view_mode">list</field>
        <field name="domain">[('orderpoint_id','!=',False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No Low Stock Record found.</p>
        </field>
    </record>

    <menuitem id="sh_stock_quant_orderpoint_menu" name="Low Stock" parent="stock.menu_stock_adjustments"
        sequence="10" action="sh_stock_quant_orderpoint_action" groups="stock.group_stock_manager" />

</odoo>