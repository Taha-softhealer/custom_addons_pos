<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_measurement_type_form_view" model="ir.ui.view">
        <field name="name">sh.measurement.type.form</field>
        <field name="model">sh.measurement.type</field>
        <field name="arch" type="xml">
            <form string="Measurement Type" >
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" class="o_text_overflow" placeholder="e.g. Height" required="True"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="type_uom_ids" widget="many2many_tags"></field>
                            <field name="sh_enter_size_length" required='1' readonly="True"></field>
                        </group>
                        <group>
                            <field name="sh_measurement_categ_ids" widget="many2many_tags"></field> 
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_measurement_type_list_view" model="ir.ui.view">
        <field name="name">sh.measurement.type.list</field>
        <field name="model">sh.measurement.type</field>
        <field name="arch" type="xml" >
            <list string="Measurement Types">
                <field name="name"/>
                <field name="type_uom_ids"/>
                <field name="sh_measurement_categ_ids" widget="many2many_tags"></field> 
            </list>
        </field>
    </record>

    <record id="action_measurement_type" model="ir.actions.act_window" >
        <field name="name">Measurement Type</field>
        <field name="res_model">sh.measurement.type</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" eval="False"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a new Measurement Type
            </p>
            <p>
                Measurement Type are used to identify the Measurement
            </p>
        </field>
    </record>

    <menuitem id="main_menu_measurement_type" name="Measurement Types" parent="point_of_sale.menu_point_config_product" action="action_measurement_type"     />
</odoo>