<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_view_partner_measurement_form" model="ir.ui.view">
        <field name="name">res.partner.measurement.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook[last()]" position="inside">
                <page string="Measurement Details" name="sh_measurement">
                    <group>
                        <group>
                            <field name="sh_measurement_ids">
                                <list>
                                    <field name="name"></field>
                                    <field name="sh_measurement_note" ></field>
                                    <button type="object" name="sh_duplicate_rec" class="btn-link" icon="fa-copy" > </button>
                                </list>
                            </field>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>