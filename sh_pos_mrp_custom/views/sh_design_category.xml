<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_design_category_list_view" model="ir.ui.view">
        <field name="name">sh.design.category.list</field>
        <field name="model">sh.design.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"></field>
            </list>
        </field>
    </record>

    <record id="sh_design_category_form_view" model="ir.ui.view">
        <field name="name">sh.design.category.form</field>
        <field name="model">sh.design.category</field>
        <field name="arch" type="xml">
            <form string="design category">
                <sheet>
                    <group>
                        <field name="name"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_design_category_action" model="ir.actions.act_window">
        <field name="name">design category</field>
        <field name="res_model">sh.design.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="sh_design_category_action_menu" name="Design Category" action="sh_design_category_action" parent="point_of_sale.menu_point_config_product"/>
</odoo>