<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_mrp_production_form_inherit" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <header position="inside">
                <!-- modification -->
                <button name="action_modification_approve" invisible="state != 'modification'" string="Approve" type="object" class="oe_highlight" groups="mrp.group_mrp_manager" />
                <button name="action_modification_reject" invisible="state != 'modification'" string="Reject" type="object" class="oe_highlight" groups="mrp.group_mrp_manager" />

                <!-- Refund Approval -->
                <button name="action_refund_approve" invisible="state != 'refund_approval'" string="Approve Refund" type="object" class="oe_highlight" groups="mrp.group_mrp_manager" />
                <button name="action_refund_reject" invisible="state != 'refund_approval'" string="Reject Refund" type="object" class="oe_highlight" groups="mrp.group_mrp_manager" />
            </header>
            
            <div name="button_box" position="inside">
                <field name="sh_mrp_to_pos_internal_picking_count" invisible="True" />
                <button name="action_mrp_to_pos_internal_pickings" type="object"
                            class="oe_stat_button" icon="fa-truck"
                            invisible="sh_mrp_to_pos_internal_picking_count == 0">
                            <field string="Transfers" name="sh_mrp_to_pos_internal_picking_count" widget="statinfo"/>
                </button>
            </div>
            <xpath expr="//label[@name='bom_label']" position="before">
                <field name="sh_pos_order_id" readonly='1' />
                <field name="sh_pos_order_line_id" invisible="True" />
                <field name="sh_employee_id" readonly='1' />
                <field name="sh_measurement_id" readonly='1' />
                <field name="sh_old_production_id" string="Old Manufacturing Order" readonly="True" invisible="not sh_old_production_id"></field>
            </xpath>
            <xpath expr="//page[@name='components']/field[@name='move_raw_ids']" position="before">
                <group>
                    <group>
                        <field name="sh_component_note" readonly="True" />
                    </group>
                </group>
            </xpath>
            
            <notebook position="inside">
                <page name="sh_designs" string="Designs">
                    <field name="sh_designs" ></field>
                </page>
                <page name="sh_mrp_production_measurement_line_page" string="Measurement">
                    <group>
                        <group>
                            <field name="sh_measurement_note" readonly="True" />
                        </group>
                        <field name="sh_mrp_production_measurement_line" readonly="True">
                            <list>
                                <field name="production_id" column_invisible="True" />
                                <field name="sh_measurement_type_id"/>
                                <field name="size_1" />
                                <field name="size_2" />
                                <field name="size_3" />
                                <field name="size_4" />
                                <field name="size_5" />
                                <field name="size_6" />
                                <field name="size_7" />
                                <field name="size_8" />
                                <field name="size_9" />
                                <field name="size_10" />
                                <field name="sh_uom_id" />
                            </list>
                        </field>
                    </group>
                </page>
                <page name="sh_modification_request_line_page" string="Modification Request">
                    <field name="sh_modification_request_line">
                        <list editable="bottom" decoration-warning="update_state == 'modified'" decoration-success="update_state == 'new'">
                            <field name="production_id" column_invisible="True" />
                            <field name="pos_order_id" column_invisible="True" />
                            <field name="company_id" column_invisible="True"/>
                            <field name="update_state" column_invisible="True" />
                            <field name="serial_no"/>
                            <field name="final_product_id" />
                            <field name="modified_product_id" />
                            <field name="product_uom_id" />
                            <field name="product_qty" />
                        </list>
                    </field>
                </page>
                <page name="sh_measurement_modification_request_line_page" string="Measurement Modification Request">
                    <group>
                        <group>
                            <field name="sh_measurement_modification_note" readonly="True" />
                        </group>
                        <field name="sh_measurement_modification_request_line" readonly="1">
                            <list decoration-warning="update_state == 'modified'" decoration-success="update_state == 'new'">
                                <field name="update_state" />
                                <field name="sh_measurement_type_id"/>
                                <field name="size_1" />
                                <field name="size_2" />
                                <field name="size_3" />
                                <field name="size_4" />
                                <field name="size_5" />
                                <field name="size_6" />
                                <field name="size_7" />
                                <field name="size_8" />
                                <field name="size_9" />
                                <field name="size_10" />
                            </list>
                        </field>
                    </group>
                </page>
                <page name="sh_refund_order_id_page" string="Return Request">
                    <field name="sh_refund_employee_id" ></field>
                    <field name="sh_refund_order_id" readonly='1'>
                        <list>
                            <field name="sh_order_reason_id" ></field>
                            <field name="sh_order_reason_note" ></field>
                        </list>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <record id="mrp_production_list_view_inherit" model="ir.ui.view">
        <field name="name">mrp.production.view.list.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="is_sh_fitting_required" optional="show" readonly="True"/>
                <field name="is_sh_dependent_mo" optional="show" readonly="True"/>
            </field>
        </field>
    </record>

    <!-- State wise Manufacturing Orders -->
    <menuitem id="mrp_production_state_menu" name="State wise Manufacturing Orders"
        groups="mrp.group_mrp_manager" parent="mrp.menu_mrp_manufacturing"/>

    
    <!-- Modification -->
    <record id="mrp_production_modification_action" model="ir.actions.act_window">
        <field name="name">Manufacturing Orders</field>
        <field name="res_model">mrp.production</field>
        <field name="view_mode">list,kanban,form,calendar,pivot,graph,activity</field>
        <field name="view_id" eval="False"/>
        <field name="search_view_id" ref="mrp.view_mrp_production_filter"/>
        <field name="context">{'default_company_id': allowed_company_ids[0]}</field>
        <field name="domain">[('picking_type_id.active', '=', True),('state','=','modification')]</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No manufacturing order found on Modification state. Let's create one.
          </p><p>
            Use Manufacturing Orders (MO) to build finished products while consuming components: i.e. 1 Table = 4 Table Legs + 1 Table Top
          </p>
        </field>
    </record>

    <menuitem id="mrp_production_modification_menu" name="Modification"
        action="mrp_production_modification_action" parent="mrp_production_state_menu" />


