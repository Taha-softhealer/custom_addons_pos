            <field name="res_model">mrp.production</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="sh_pos_mrp_custom.mrp_production_mesuremnt_view_form_normalized"/>
    </record>

    <menuitem id="mrp_production_refund_approval_menu" name="Refund Approval"
        action="mrp_production_refund_approval_action" parent="mrp_production_state_menu" />

</odoo>