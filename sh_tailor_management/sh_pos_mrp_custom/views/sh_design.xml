<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_design_list_view" model="ir.ui.view">
        <field name="name">sh.design.list</field>
        <field name="model">sh.design</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="category_id" options="{'no_create': True, 'no_edit':True}" ></field>
                <field name="type_id" domain="[('design_category', '=', category_id)]" options="{'no_create': True, 'no_edit':True}" ></field>
                <field name="image" widget="image" options='{"size": [100, 100]}'></field>
                <field name="sh_measurment" column_invisible="True" />
            </list>
        </field>
    </record>

    <record id="sh_design_form_view" model="ir.ui.view">
        <field name="name">sh.design.form</field>
        <field name="model">sh.design</field>
        <field name="arch" type="xml">
            <form string="design category">
                <sheet>
                    <group>
                        <field name="category_id"></field>
                        <!-- [("design_category", "=", self.category_id.name) -->
                        <field name="type_id" domain="[('design_category', '=', category_id)]"></field>
                        <field name="image" widget="image" class="oe_avatar"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_design_action" model="ir.actions.act_window">
        <field name="name">design</field>
        <field name="res_model">sh.design</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- <menuitem id="sh_design_action_menu" name="design" action="sh_design_action"  parent="point_of_sale.menu_point_config_product" /> -->

</odoo>