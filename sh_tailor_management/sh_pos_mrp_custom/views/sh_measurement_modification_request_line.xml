<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_measurement_mod_line_form" model="ir.ui.view">
        <field name="name">sh.measurement.modification.line.form</field>
        <field name="model">sh.measurement.modification.request</field>
        <field name="arch" type="xml">
            <form string="Measurement details line">
                <sheet>
                    <group col="4">
                        <field name="sh_measurement_type_id" />
                        <field name="sh_uom_id" />
                        <field name="sh_partner_id" />
                        <field name="production_id" />
                        <field name="size_1" />
                        <field name="size_2" />
                        <field name="size_3" />
                        <field name="size_4" />
                        <field name="size_5" />
                        <field name="size_6" />
                        <field name="size_7" />
                        <field name="size_8" />
                        <field name="size_9" />
                        <field name="size_10" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sh_measurement_line_mod_list" model="ir.ui.view">
        <field name="name">sh.measurement.modification.line.list</field>
        <field name="model">sh.measurement.modification.request</field>
        <field name="arch" type="xml">
            <list string="Measurement Detail lines">
                <field name="sh_measurement_type_id"/>
                <field name="sh_uom_id"/>
            </list>
        </field>
    </record>

    <record id="list_action_sh_measurement_mod_line" model="ir.actions.act_window">
        <field name="name">Measurement modification detail lines</field>
        <field name="res_model">sh.measurement.modification.request</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="sh_measurement_line_list"/>
    </record>
    <record id="form_action_sh_measurement_mod_line" model="ir.actions.act_window">
        <field name="name">Measurement modification detail line</field>
        <field name="res_model">sh.measurement.modification.request</field>
        <field name="view_mode">form,list</field>
        <field name="view_id" ref="sh_measurement_line_form"/>
    </record>
</odoo>