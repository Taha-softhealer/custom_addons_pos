<?xml version='1.0' encoding='utf-8'?>
<odoo>
    

    <record id="sh_measurement_category_view_list" model="ir.ui.view">
        <field name="name">sh.measurement.category.view.list</field>
        <field name="model">sh.measurement.category</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="sh_measurement_category_view_form" model="ir.ui.view">
        <field name="name">sh.measurement.category.view.form</field>
        <field name="model">sh.measurement.category</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'zoom': true, 'preview_image':'image_128'}"/>
                    <div class="oe_title mb24">
                        <label for="name"/>
                        <h2><field name="name" /></h2>
                    </div>
                    <group>
                        <group>
                            <field name="sh_gender" widget="radio" ></field>
                        </group>
                    </group>
                    <notebook>
                        <page name="sh_measurement_line_page" string="Lines">
                            <field name="sh_measurement_line_ids" widget="many2many_tags" ></field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_measurement_category_action" model="ir.actions.act_window">
        <field name="name">Measurement Category</field>
        <field name="res_model">sh.measurement.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a new Measurement Category
            </p>
        </field>
    </record>

    <menuitem
        id="sh_measurement_category_menu"
        name="Measurement Category"
        action="sh_measurement_category_action"
        parent="point_of_sale.menu_point_config_product"
        sequence="10"/>
</odoo>