<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="sh_pos_mrp_custom.ControlButtons" t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension">
        <xpath expr="//t[@t-if='props.showRemainingButtons']/div/OrderlineNoteButton" position="after">
            <button class="js_order_type" t-att-class="buttonClass" t-on-click="() => this.update_line_partner()">
                <div t-if="this.partner_name" t-esc="this.partner_name.name" class="text-truncate text-action" />
                <t t-else="">Line Customer</t>
            </button>
        </xpath>
    </t>

</templates>