<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_quant_list_inventory_editable_inherit" model="ir.ui.view">
        <field name="name">stock.quant.view.list.inherit</field>
        <field name="model">stock.quant</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="stock.view_stock_quant_list_inventory_editable" />
        <field name="arch" type="xml">
            <list position="attributes">
                <attribute name="default_order">quantity ASC, location_id, inventory_date, product_id, package_id, lot_id, owner_id</attribute>
            </list>
        </field>
    </record>

    <record id="sh_low_stock_quant_action" model="ir.actions.server">
        <field name="name">Low Stock</field>
        <field name="model_id" ref="stock.model_stock_quant"/>
        <field name="state">code</field>
        <field name="groups_id" eval="[(4, ref('stock.group_stock_user'))]"/>
        <field name="code">
            action = model.with_context(sh_qty_low_to_high=True).action_view_inventory()
        </field>
    </record> 
    <menuitem id="sh_low_stock_quant_menu" name="Low Stock" parent="stock.menu_stock_adjustments"
        sequence="10" action="sh_low_stock_quant_action" groups="stock.group_stock_manager" />

</odoo>