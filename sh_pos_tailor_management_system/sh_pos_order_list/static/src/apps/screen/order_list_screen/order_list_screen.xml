<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <t t-name="sh_pos_order_list.OrderListScreen">
        <div class="shorderlist-screen screen h-100 d-flex flex-column ">
            <div class="top-content sh_top_content text-center">
                <div class="sh_header_buttons d-flex align-items-center p-2 border-bottom justify-content-between">
                    <div class="d-flex align-items-center">
                        <div class="button back btn btn-lg btn-secondary mx-2 " t-on-click="back">
                            <i t-if="ui.isSmall" class="fa fa-angle-double-left"/>
                            <t t-else="">Discard</t>
                        </div>
                        <div>
                            <select class='sh_pos_order_filter form-select btn-secondary   ' t-on-change="ShApplyFilter">
                                <option value="all">All Orders</option>
                                <option value="paid">Paid</option>
                                <option value="done">Posted</option>
                                <option value="invoiced">Invoiced</option>
                            </select>
                        </div>
                    </div>
                    <div class="d-flex align-items-center justify-content-end">
                        <div class="sh_top_bar_search_box pos-search-bar form-control btn-secondary d-flex align-items-center mx-2">
                            <input placeholder="Search..." t-model="state.search_word" size="1" class="sh_pos_order_search flex-grow-1 w-auto h-100 border-0 p-1 me-4" t-on-keyup="updateOrderList" />
                            <span class="search-clear-order-list fa fa-times position-absolute end-0 me-2 pe-1 cursor-pointer" t-on-click="clear_search"></span>
                        </div>
                        <div class="sh_top_bar_date_box ">
                            <input type="date" class="form-control btn-secondary" name="date1" id="date1" t-on-change="change_date" />
                        </div>
                    </div>
                </div>
                <section class="sh_full_content_service_management sh_order_list_full_content">
                    <table class="sh_order_list table table-striped w-100">
                        <thead>
                            <tr>
                                <th class="py-2 sh_orderlist_ref_th">Order Ref.</th>
                                <th class="py-2 sh_orderlist_cust_th">Customer</th>
                                <th class="py-2 sh_orderlist_date_th">Date</th>
                                <th class="py-2 sh_orderlist_total_th">Total</th>
                                <th class="py-2 sh_orderlist_state_th">State</th>
                                <th class="py-2 sh-actions"></th>
                            </tr>
                        </thead>
                        <tbody class="sh_order_list_contents">
                            <t t-foreach="get_orders" t-key="order.id" t-as="order">
                                <tr t-att-data-id="order.id" class="sh_order_line" t-attf-class="{{ show_lines == order.id ? 'highlight' : ''}}" t-on-click="() => this.clickLine(order)">
                                    <td class="sh_orderlist_ref_td">
                                        <t t-esc="order.pos_reference"></t>
                                    </td>
                                    <td class="sh_orderlist_customer_td">
                                        <t t-if="order.partner_id">
                                            <t t-esc="order.partner_id.name"></t>
                                        </t>
                                        <t t-else="">
                                        -
                                        </t>
                                    </td>
                                    <td class="sh_orderlist_date_td">
                                        <t t-esc="order.date_order"></t>
                                    </td>
                                    <td class="pos_order_total_td sh_orderlist_total_td">
                                        <t t-esc="env.utils.formatCurrency(order.amount_total)"></t>
                                    </td>
                                    <td class="sh_orderlist_state_td">
                                        <t t-esc="order.state"></t>
                                    </td>
                                    <td class="sh_orderlist_print_order_td sh-actions">
                                        <t t-if="pos.config.sh_enable_re_order">
                                            <t t-if="order.state != 'done' and order.state != 'cancel'">
                                                <i t-att-data-id="order.id" class="fa fa-retweet re_order_icon" aria-hidden="true" t-on-click="() => this.reorder_pos_order(order)" title="Re-Order"></i>
                                            </t>
                                        </t>
                                        <t t-if="pos.config.sh_enable_order_reprint">
                                            <i t-att-data-id="order.id" class="fa fa-print print_order" aria-hidden="true" t-on-click="() => this.print_pos_order(order)"></i>
                                        </t>
                                        <span style="margin-left: 5px;" t-if="order.sh_delivery_state != 'Deliverd'" >
                                            <span t-att-data-id="order.id"  style="font-size: 20px;" class=" fa fa-check-circle-o pick_up_order" aria-hidden="true" t-on-click="() => this.pick_up_order(order)" title="modify-Order">
                                            </span>
                                        </span>
                                    </td>
                                </tr>
                                <tr class="sh_sub_order_line_tr">
                                    <td colspan='7'>
                                        <table t-att-id="'inner_table_'+order.id" class="w-100 table table-striped inner_data_table sh_sub_order_line " t-attf-class="{{ show_lines == order.id ? '' : 'sh_hide_lines'}}">
                                            <thead>
                                                <th class="sh_inner_table_product_th">Product</th>
                                                <th class="sh_inner_table_qty_th">Quantity</th>
                                                <th class="sh_inner_table_unit_price_th">Production Order Stage</th>
<!-- 
                                                <th class="sh_inner_table_disc_th">Discount (%)</th>
                                                <th class="sh_inner_table_unit_price_th">Unit Price</th>
                                                <th class="sh_inner_table_sub_total_th">Sub Total</th> -->
                                                <th class="sh_inner_table_sub_total_th"></th>
                                                <th class="sh_inner_table_sub_total_th"></th>
                                                <th></th>
                                            </thead>
                                            <tr t-foreach="order.lines" t-as="line" t-key="line.id" class="order_data_row order_data sh_inner_table_data_row">
                                                <td class="sh_inner_table_product_td">
                                                    <t t-esc=" line.product_id.display_name"></t>
                                                </td>
                                                <td class="sh_inner_table_qty_td">
                                                    <t t-esc="line.qty"></t>
                                                </td>
                                                <td class="sh_inner_table_qty_td">
                                                    <t t-if="line.sh_production_state" >
                                                        <t t-esc="line.sh_production_state"></t>
                                                    </t>
                                                    <t t-else="">
                                                        -
                                                    </t>
                                                </td>
                                                <!-- <td class="sh_inner_table_disc_td">
                                                    <t t-esc="line.discount"></t>
                                                </td>
                                                <td class="sh_inner_table_unit_price_td">
                                                    <t t-esc="env.utils.formatCurrency(line.price_unit)"></t>
                                                </td>
                                                <td class="sh_inner_table_sub_total_td">
                                                    <t t-esc="env.utils.formatCurrency(line.price_subtotal_incl)"></t>
                                                </td> -->
                                                <td class="sh_orderlist_print_order_td sh-actions">
                                                     <span style="margin-left: 5px;">
                                                        <span t-att-data-id="order.id" class="modification_order_icon" aria-hidden="true" t-on-click="sh_modify_mo" title="modify-Order">
                                                            <i class="fa fa-cogs" style="font-size: 30px;" />
                                                        </span>
                                                    </span>

                                                </td>
                                                <td class="sh_orderlist_print_order_td sh-actions" >
                                                     <span style="margin-left: 5px;" title="Measurement Modification">
                                                        <span t-att-data-id="order.id" class="modification_order_icon" aria-hidden="true" t-on-click="()=> this.sh_modify_measuremnt(line)" title="modify-Masuremnt ">
                                                            
                                                            <i class="fa fa-user-secret" style="font-size: 30px;" />

                                                        </span>
                                                    </span>

                                                </td>
                                                <td >
                                                    <span title="Fitting Ok!">
                                                        <t t-if="line.sh_production_state == 'Fitting'" > 
                                                            <img t-att-data-id="line.id" t-on-click="(ev) => this.get_fitting_feedback(ev, line)" style="width:30px;  " src="/sh_pos_order_list/static/src/apps/screen/order_list_screen/img/fitting.svg" />
                                                        </t>
                                                    </span>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </section>
                <div class="sh_page_controls item item d-flex align-items-center gap-2">
                    <div class="page-controls input-group align-items-center justify-content-center gap-4">
                        <button class="previous btn btn-lg btn-secondary" t-on-click="() => this.onPrevPage()">
                            <i class="oi oi-chevron-left" role="img" aria-label="Previous Order List" title="Previous Order List"></i>
                        </button>
                        <div class="page">
                            <span class="fs-3 fw-bold">
                                <t t-esc="pageNumber" />
                            </span>
                        </div>
                        <button class="next btn btn-lg btn-secondary" t-on-click="() => this.onNextPage()">
                            <i class="oi oi-chevron-right" role="img" aria-label="Next Order List" title="Next Order List"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>